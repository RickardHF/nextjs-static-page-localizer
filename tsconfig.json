{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ES5",
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "types": ["node"],
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable"
        ],
        "outDir": "dist",
        "jsx": "react",
        "moduleResolution": "Node",
        "strict": true,
        "sourceMap": true,
        "esModuleInterop": true
    },
    "include": [
        "src/**/*"
    ]
}